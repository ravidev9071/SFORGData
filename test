															  <div lwc-enmikoh2qu="" part="input-text">
																	<label lwc-enmikoh2qu="" class="slds-form-element__label slds-no-flex" for="input-11" part="label">
																		<abbr class="slds-required" title="required">* </abbr>Last Name</label>
																	<div lwc-enmikoh2qu="" class="slds-form-element__control slds-grow" part="input-container" type="text">
																		 <input lwc-enmikoh2qu="" class="slds-input" aria-errormessage="help-message-11" id="lastName" part="input" placeholder="" type="text" />
																	</div>
															  </div>
														 </lightning-primitive-input-simple>
													</lightning-input>
											  </div>										  
										  </div>  
										  
										<div  class="slds-grid  slds-wrap slds-wrap slds-gutters">
											  <div  class="slds-col slds-medium-size_6-of-12 slds-large-size_6-of-12">
													<lightning-input  class="validate search slds-form-element modalSubmit" lwc-66unc5l95ad-host="" value="" label=" Email" name="email"
														placeholder="Email" type="email" variant="standard" required="true"
														onchange={handleChange}>
												</lightning-input>
											  </div>											 
											  <div  class="slds-col slds-medium-size_6-of-12 slds-large-size_6-of-12">
													<lightning-input  class="validate search slds-form-element modalSubmit" lwc-66unc5l95ad-host="" value="" label=" Office Phone Number" name="phone"
														placeholder="Phone" type="tel" variant="standard" required="true" maxlength="10" minlength="10"
														onchange={handleChange}>
													</lightning-input>
											  </div>	
										  
										 </div>	 <!-- end row  -->										
							</div>
							 <div class="slds-card__footer" part="footer">
							 <slot name="footer">
								<div  slot="footer">
								<lightning-button class="brand-button" variant="brand" label="Cancel" onclick={closeModal}>
								<button title="Cancel" onclick={closeModal} type="button" class="slds-button slds-button_text-destructive">Cancel</button>
								</lightning-button>							
								<lightning-button class="brand-button" variant="brand" label="Submit" onclick= {handleSubmit}>
									 <button  onclick= {handleSubmit} class="slds-button slds-m-top_large slds-button_brand" aria-disabled="false" type="button" part="button" kx-scope="button-brand" kx-type="ripple">Submit</button>
